@page
@model PrzepisyWeb.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="d-flex p-2 justify-content-center" style="margin: 10px 0 0 0">
    <h2>Kategorie!</h2>
</div>
<p>
    <a asp-page="Create">Dodaj nową kategorię!</a>
</p>
<table class="table">
    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.categoryID">Edytuj</a> |
                <a asp-page="./Delete" asp-route-id="@item.categoryID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
