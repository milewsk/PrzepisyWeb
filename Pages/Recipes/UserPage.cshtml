@page
@model PrzepisyWeb.Pages.Recipes.UserPageModel

@{
    ViewData["Title"] = "Przepisy użytkownika - ";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="padding: 20px 0 20px 0">Lista przepisów użytkownika</h1>
<h3>
    
    @Html.DisplayFor(model => model.UsernameDisplay)
</h3>

<table class="table">
    <thead>
        <tr>
            <th>
            Nazwa przepisu
            </th>
            <th>
                Zdjęcia
            </th>
            <th>
                Składniki
            </th>
            <th>
                Sposób przygotowania
            </th>
            <th>
                Data dodania
            </th>
            <th>
                Liczba polubień
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RecipeList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.LikeCounter)</b>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="UserName" asp-for="@item.OwnerUserName" />

                    <input type="hidden" name="Like" asp-for="@item.RecipeID" />
                    <br /><input type="submit" name="Like" value="Lubię" class="btn btn-success" style="margin: 0 0 5px 0" />
                    </form>
                    <form method="post">
                    <input type="hidden" name="Dislike" asp-for="@item.RecipeID" />
                    <br /><input type="submit" name="Dislike" value="Nie lubię" class="btn btn-danger" style="margin: 0 0 5px 0" />
                </form>
                <a asp-page="./AddFavourite" asp-route-id="@item.RecipeID" class="btn btn-light">Dodaj do ulubionych</a>
            </td>
        </tr>
}
    </tbody>
</table>
