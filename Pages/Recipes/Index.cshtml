@page
@model PrzepisyWeb.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Głosowanie - ";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 style="padding: 20px 0 30px 0">Lista przepisów do głosowania</h2>

<form method="post">
    <div class="form-group justify-content-center">
        <label id="search_1" style="margin: 10px 0 5px 0; font-size: 18px" asp-for="SearchString"><b>Wyszukaj przepis, na który chcesz zagłosować</b></label>
        <input type="text" class="form-control" id="search_1" asp-for="SearchString" placeholder="Nazwa przepisu, autor, kategoria..." />
        <small id="search_1" class="form-text text-muted">Maksymalnie 50 znaków</small>
        <span asp-validation-for="SearchString" class="text-danger"></span>
    </div>
    <div class="justify-content-center align-content-center">
        <input type="submit" name="Search" value="Szukaj" class="btn btn-outline-info" style="margin: 0 0 50px 0" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Składniki
            </th>
            <th>
                Spsób przygotowania
            </th>
            <th>
                Data dodania
            </th>
            <th>
                Nazwa użytkownika
            </th>
            <th>
                Liczba polubień
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SearchList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="/Recipes/UserPage" asp-route-UserName="@item.OwnerUserName">@Html.DisplayFor(modelItem => item.OwnerUserName)</a>
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.LikeCounter)</b>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="UserName" asp-for="@item.OwnerUserName" />

                    <input type="hidden" name="Like" asp-for="@item.RecipeID" />
                    <br /><input type="submit" name="Like" value="Lubię" class="btn btn-success" style="margin: 0 0 5px 0" />

                    <!--input type="hidden" name="Like" asp-for="@item.RecipeID" /-->
                    <br /><input type="submit" name="Dislike" value="Nie lubię" class="btn btn-danger" style="margin: 0 0 5px 0" />
                </form>

                <a asp-page="./Details" asp-route-id="@item.RecipeID" class="btn btn-outline-secondary" style="margin: 0 0 5px 0">Zobacz szczegóły przepisu</a>

            </td>
        </tr>
        }
    </tbody>
</table>
