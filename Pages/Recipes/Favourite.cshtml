@page
@model PrzepisyWeb.Pages.Recipes.FavouriteModel

@{
    ViewData["Title"] = "Ulubione - ";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="padding: 20px 0 30px 0">Twoje ulubione przepisy</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa przepisu
            </th>
            <th>
                Zdjęcia
            </th>
            <th>
                Składniki
            </th>
            <th>
                Sposób przygotowania
            </th>
            <th>
                Data dodania
            </th>
            <th>
                Nazwa użytkownika
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="/Recipes/UserPage" asp-route-UserName="@item.OwnerUserName">@Html.DisplayFor(modelItem => item.OwnerUserName)</a>
            </td>
            <td>
                <a asp-page="./DeleteFavourite" asp-route-id="@item.RecipeID" class="btn btn-outline-danger">Usuń z ulubionych</a>

            </td>
        </tr>
}
    </tbody>
</table>
