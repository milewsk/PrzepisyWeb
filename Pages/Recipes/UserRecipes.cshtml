@page
@model PrzepisyWeb.Pages.Recipes.UserRecipesModel

@{
    ViewData["Title"] = "UserRecipes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Przepisy użytkownika: NIESKOŃCZONE</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRecipes[0].LikeCounter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserRecipes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LikeCounter)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecipeID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecipeID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecipeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
