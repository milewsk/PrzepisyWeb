@page
@model PrzepisyWeb.Pages.Recipes.MyRecipesModel

@{
    ViewData["Title"] = "MyRecipes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>MyRecipes</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyRecipes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyRecipes[0].Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyRecipes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyRecipes[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyRecipes[0].LikeCounter)
            </th>
            <th>
                
            </th>
            <th>
                Kategorie
            </th>
        </tr>
    </thead>
    <tbody>  
@foreach (var item in Model.MyRecipes) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LikeCounter)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RecipeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RecipeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RecipeID">Delete</a> |
                <a asp-page="/Categories/AddCategory" asp-route-id="@item.RecipeID">Dodaj kategorie</a>
            </td>
        </tr>
}
    </tbody>
</table>
