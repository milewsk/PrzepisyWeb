@page
@model PrzepisyWeb.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Dodawanie - ";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="padding: 20px 0 0 0">Dodaj swój nowy przepis!</h1>

<h4>Przepis</h4>
<hr color="red" />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label">Nazwa przepisu</label>
                <!--input asp-for="Recipe.Name" class="form-control" /-->
                <textarea asp-for="Recipe.Name" class="form-control" rows="3" placeholder="Tytuł może pomieścić maksymalnie 80 znaków!"></textarea>
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Image" class="control-label">Prześlij zdjęcia</label>
                <!--input asp-for="Recipe.Image" class="form-control" /-->
                <span asp-validation-for="Recipe.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Ingredients" class="control-label">Składniki</label>
                <!--input asp-for="Recipe.Ingredients" class="form-control" /-->
                <textarea asp-for="Recipe.Ingredients" class="form-control" rows="3" placeholder="Przykład - 200g mąki, 100ml mleka..."></textarea>
                <span asp-validation-for="Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Description" class="control-label">Sposób przygotowania</label>
                <!--input asp-for="Recipe.Description" class="form-control" /-->
                <textarea asp-for="Recipe.Description" class="form-control" rows="6" placeholder="Tutaj podaj swój przepis"></textarea>
                <span asp-validation-for="Recipe.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz przepis" class="nav-link btn btn-outline-success" />
            </div>
`           </form>
            <div>
                <input type="button" class="nav-link btn btn-outline-danger" value="Wróć do listy przepisów" onClick="history.back();" />
                <!--button id="back" type="submit" class="nav-link btn btn-outline-danger">Wróć do listy przepisów</button-->
            </div>
        

    </div>
    <div class="col-md-6 col-md-offset-2">
        <img class="right" src="~/my_img/35619.jpg" alt="przepisy" />
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
